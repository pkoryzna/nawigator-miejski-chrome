{
  "manifest_version": 2,

  "name": "nawigator miejski",
  "description": "wyszukiwanie połączeń na jakdojade.pl",
  "version": "3",

  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
   },

  "background": {
    "scripts": ["js/contextMenu.js"]
  },

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "permissions": [ 
    "geolocation", "storage", "contextMenus"
  ]
}
